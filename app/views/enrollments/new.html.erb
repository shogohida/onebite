<div>
  <div class="navbar navbar-expand-sm navbar-light navbar-lewagon gray-background">
    <%= link_to "OneBite", root_path, class: "onebite-home-orange"  %>

        <%= form_tag courses_path, class: "navbar-searchbar mx-3", method: :get do %>
      <div class="d-flex">
        <%= text_field_tag :query,
          params[:query],
          class: "form-control banner-searchbar-round",
          placeholder: "What would you like to learn?"
          %>
          <%= submit_tag "Search", class: "btn btn-primary banner-searchbar-roundbutton" %>
        <% end %>
      </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a href="https://calendar.google.com/calendar/" class="nav-link navbar-link-text-orange mx-3" target="_blank">Calendar</a>
        </li>
        <li class="nav-item">
          <%= link_to "Profile", user_path(current_user), class: "nav-link navbar-link-text-orange mx-3" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://res.cloudinary.com/deyqjsowe/image/upload/v1589709320/Yun_Chung_Profile_Photo_2_rlfgi5.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Help", "#", class: "dropdown-item" %>
            <%= link_to "Log Out", destroy_user_session_path(current_user), method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      </ul>
    </div>
  </div>
</div>


<div class="form-container row justify-content-center">
  <div class="col-xs-12">

      <div class="simple-form p-3 rounded-box py-4">
        <h2 class="form-title-font">Step 1 of 2: Schedule Your Lessons</h2>
        <%= simple_form_for [ @course, @enrollment ] do |f| %>
          <%= f.input :start_date, label: "When would you like to start this course?", as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :duration, label: "How long do you want to study each day (in minutes)", placeholder: '60' %>
          <%= f.input :time_of_day, label: "From what time would you like to study (each day)?", as: :string, required: false, input_html: {class: "timepicker"} %>
          <%= f.input :frequency, label: 'How often do you want to study?', as: :select, collection: ['Daily', 'Weekend', 'Every Monday', 'Every Tuesday', 'Every Wednesday', 'Every Thursday', 'Every Friday', 'Every Saturday', 'Every Sunday'] %>
          <%#= f.input :platform_username, label: 'Write your username from the website of the course if you already have one' %>
          <%= f.submit class: "mt-4 btn banner-enroll-roundbutton text-white", value: "Schedule this \"#{@course.title}\" course now" %>
        <% end %>
      </div>


      <div class="col-xs-12">
        <div class="simple-form form-step-2 rounded-box py-4">
          <h2 class="form-title-font">Step 2 of 2: Sign Up on <%= @course.platform.name %></h2>

          <p class="text-center">Be sure to also register for this course on <%= @course.platform.name %>.</p>
          <%= link_to "\"#{@course.title}\"", @course.url, target: :_blank, class: "mt-4 btn banner-enroll-roundbutton text-white" %>
        </div>
      </div>

      <!-- Need to change the style  -->


  </div>
</div>

