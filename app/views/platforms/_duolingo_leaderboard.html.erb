<div class="leaderboard-duolingo-section my-3">
  <div class="d-flex justify-content-start align-items-center mb-3">
    <img class="leaderboard-duolingo-avatar-square" alt="avatar-square" src="https://i.pcmag.com/imagery/reviews/00MFRjnTbz8iv8USK3YZd7T-7.fit_scale.size_1028x578.v_1569475584.png" />
    <h5 class="card-title-font">Duolingo Leaderboard</h5>
    <!--  method: :post, remote: true -->

    <%= link_to user_scrape_duolingo_path, class: "move-refresh btn unfollow-button btn-sync", remote: true do %>

<i class="fas fa-sync"></i>
    <% end %>

  </div>




  <% enrollments.each do |enrollment| %>
    <div class="d-flex justify-content-around align-items-center border-bottom border-light pb-3">
      <img class="leaderboard-duolingo-avatar-square" alt="avatar-square" src="https://image.freepik.com/free-vector/_68708-545.jpg" alt="trophee">
      <p class="font-weight-bold  leaderboard-larger-font"><%= enrollment.course_title %></p>
      <img class="duo-opaque leaderboard-duolingo-avatar-square" alt="avatar-square" src="data:image/png;base64,">
      <%#= image_tag "#{enrollment.course.title.downcase}.png", alt: "alttext" %>
    </div>
    <ul class="list-inline tabs-underlined mt-3">
      <li>
        <a href="#" class="tab-underlined active">Total</a>
      </li>
      <li>
        <a href="#" class="tab-underlined">This Week</a>
      </li>
      <li>
        <a href="#" class="tab-underlined">This Month</a>
      </li>
    </ul>
    <div class="container loading-container">
      <div class="loader">
      </div>
      <div class="loader-container"></div>
      <% enrollment.user.leaderboard_friends_for(enrollment.course).each do |enrollment| %>
        <div class="d-flex justify-content-start align-items-center border-top border-bottom border-white mt-2">
          <% if enrollment.user_name == "Eugene" %>
            <img class="leaderboard-duolingo-user-avatar" alt="avatar" src="https://res.cloudinary.com/deyqjsowe/image/upload/v1591162461/Eugene_wwiqr9.jpg" />
          <% elsif enrollment.user_name == "Douglas" %>
            <img class="leaderboard-duolingo-user-avatar" alt="avatar" src="https://ca.slack-edge.com/T02NE0241-U4APKLFLM-da0b004a3774-48" />
          <% else %>
            <img class="leaderboard-duolingo-user-avatar" alt="avatar" src="https://ca.slack-edge.com/T02NE0241-U011G30540L-d8f5ae310fd0-48" />
          <% end %>
          <p><%= enrollment.user_name %></p>
          <p class="ml-auto font-weight-bold"> <%= enrollment.completion_status %> XP</p>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
